<!--pages/login/login.wxml-->
<!--pages/login.wxml-->
<view class="container"> 

 <view class="login-icon"> 
   <image class="login-img" src="/pages/img/loginback.png"></image> 
 </view> 
 <view class="login-from"> 

   <!--账号-->
   <view class="inputView"> 
     <image class="nameImage" src="/pages/img/sow.png"></image> 
     <label class="loginLab">账号</label> 
     <input class="inputText"  placeholder="请输入账号" bindinput="phoneInput" /> 
   </view> 
   <view class="line"></view> 
   <!--密码-->
   <view class="inputView"> 
     <image class="keyImage" src="/pages/img/power.png"></image> 
     <label class="loginLab">密码</label> 
     <input class="inputText" password="true" placeholder="请输入密码" bindinput="passwordInput" /> 
   </view> 
   
   <!--按钮-->
   <view class="loginBtnView"> 
     <button class="loginBtn" type="primary"  bindtap="login">登录</button> 
   </view>
   
    <!--注册-->
   <view class="registerBtnView"> 
     <button class="registerBtn" type="primary" bindtap="register">注册</button> 
   </view> 

 </view> 
</view>

